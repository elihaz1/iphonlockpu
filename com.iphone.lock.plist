<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.iphone.lock</string>

    <key>ProgramArguments</key>
    <array>
      <string>/Users/YOUR_USERNAME/bin/autolockscript.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/iphone-lock-launchd.out</string>
    <key>StandardErrorPath</key>
    <string>/tmp/iphone-lock-launchd.err</string>
  </dict>
</plist>
